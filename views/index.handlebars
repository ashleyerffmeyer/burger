<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <h1><b>EAT-DA-BURGER:</b></h1>
            <h2><b>What You Crave</b></h2>
            <img src="https://img1.mashed.com/img/gallery/what-you-dont-know-about-white-castles-famous-sliders/intro-1538487680.jpg"
                alt="slider">
        </div>

        <div class="row">
            <div class="col-md-6 text-center" class="task">
                <div class="row">
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-md-9 text-center">
                        <br>
                        <pre>{{this.id}}. {{this.burger_name}}</pre>
                    </div>
                    <div class="col-md-3 text-center">
                        <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                            <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                            <br>
                            <button type="submit" class="btn btn-primary"><b>EAT IT</b></button>
                        </form>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>

            <div class="col-md-6 text-center" class="task">
                {{#each burger_data}}
                {{#if this.devoured}}
                <br>
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <p>Enter a burger you want to eat</p>
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text"
                    placeholder="Add your burger here">
                <br>
                <button type="submit" class="btn btn-primary" id="text-enter-button"><b>Add A Burger!</b></button>
            </form>
        </div>
    </div>
</div>